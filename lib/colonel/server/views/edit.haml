= form_for :cron, :url => update_path(@job.id), :method => :put, :html => {:id => "crontab-form"} do |f|
  .box
    %h3 Minute
    %select#minutes{:multiple => "multiple", :name => "schedule[minutes][]"}
      - (0..59).each do |i|
        <option value="#{i}" #{'selected="selected"' if @job.schedule.minutes.include? i}>#{i}
    %br/
    = link_to "Select all", '#', :class => 'select_all'
    |
    \#{link_to "Clear all", '#', :class => 'clear_all'}
  .box
    %h3 Hour
    %select#hours{:multiple => "multiple", :name => "schedule[hours][]"}
      - (0..23).each do |i|
        <option value="#{i}" #{'selected="selected"' if @job.schedule.hours.include? i}>#{i}
    %br/
    = link_to "Select all", '#', :class => 'select_all'
    |
    \#{link_to "Clear all", '#', :class => 'clear_all'}
  .box
    %h3 Day
    %select#days{:multiple => "multiple", :name => "schedule[days][]"}
      - (1..31).each do |i|
        <option value="#{i}" #{'selected="selected"' if @job.schedule.days.include? i}>#{i}
    %br/
    = link_to "Select all", '#', :class => 'select_all'
    |
    \#{link_to "Clear all", '#', :class => 'clear_all'}
  .box
    %h3 Month
    %select#months{:multiple => "multiple", :name => "schedule[months][]"}
      - (1..12).each do |i|
        <option value="#{i}" #{'selected="selected"' if @job.schedule.months.include? i}>#{i}
    %br/
    = link_to "Select all", '#', :class => 'select_all'
    |
    \#{link_to "Clear all", '#', :class => 'clear_all'}
  .box
    %h3 Weekday
    %select#weekdays{:multiple => "multiple", :name => "schedule[weekdays][]"}
      - (0..6).each do |i|
        <option value="#{i}" #{'selected="selected"' if @job.schedule.weekdays.include? i}>#{i}
    %br/
    = link_to "Select all", '#', :class => 'select_all'
    |
    \#{link_to "Clear all", '#', :class => 'clear_all'}
  %br/
  %br/
  %br/
  %br/
  %br/
  %br/
  %br/
  %br/
  %br/
  %br/
  Command:
  %input#command{:name => "command", :size => "500", :type => "text", :value => @job.command.get}/
  %input{:type => "submit", :value => "Update"}/
